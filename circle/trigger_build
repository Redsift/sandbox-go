#!/bin/bash

repoList=( $CIRCLE_REVERSE_DEPENDENCIES )
branch="${CIRCLE_BRANCH/\//%2F}" # urlencode slashes
# repoList=()

for repo in "${repoList[@]}"
do
  echo Triggering CI build $repo && \
    curl -v \
    -u ${CIRCLE_TOKEN}: \
    --header "Content-Type: application/json" \
    --request POST \
    "https://circleci.com/api/v1.1/project/redsift/${repo}/tree/${branch}"
done
